<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="false">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/com/mengruojun/common/global.properties</value>
                <value>classpath:/com/mengruojun/jms/jms.properties</value>
            </list>
        </property>
    </bean>

    <!-- Activates scanning of @Autowired -->
    <context:annotation-config/>

    <!-- Activates scanning of @Repository and @Service -->
    <context:component-scan base-package="com.mengruojun"/>

    <!-- 配置JMS连接工厂 -->
    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="${tcpBrokerURL}" />
    </bean>

    <!-- 配置JMS连接工厂 -->
    <bean id="connectionFactory2" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="vm://localhost" />
    </bean>
    <!-- 配置JMS模版 -->
    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
    </bean>
    <!-- 发送消息的目的地（一个主题） -->
    <bean id="jmsTopicMarketBarData" class="org.apache.activemq.command.ActiveMQTopic">
        <!-- 设置消息主题的名字 -->
        <constructor-arg index="0" value="${topic.marketdata}"/>
    </bean>

    <!-- 发送消息的目的地（一个主题） -->
    <bean id="jmsTopicAccountInfo" class="org.apache.activemq.command.ActiveMQTopic">
        <!-- 设置消息主题的名字 -->
        <constructor-arg index="0" value="${topic.accountinfo}"/>
    </bean>
    <!-- 发送消息的目的地（一个主题） -->
    <bean id="jmsTopicTradeAction" class="org.apache.activemq.command.ActiveMQTopic">
        <!-- 设置消息主题的名字 -->
        <constructor-arg index="0" value="${topic.tradeaction}"/>
    </bean>

    <!-- Add new DAOs here -->

    <!-- Add new Managers here -->
</beans>